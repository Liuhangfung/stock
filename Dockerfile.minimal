# Ultra-minimal Docker for server deployment
FROM python:3.9-alpine

WORKDIR /app

# Install minimal system dependencies
RUN apk add --no-cache wget

# Install Python packages
RUN pip install --no-cache-dir \
    pandas==2.1.3 \
    numpy==1.24.3 \
    plotly==5.17.0 \
    requests==2.31.0 \
    openpyxl==3.1.2 \
    kaleido==0.2.1

# Copy files
COPY . .

# Run analysis
CMD ["python", "hk_stock_analysis_docker.py"] 